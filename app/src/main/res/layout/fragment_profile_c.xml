<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:background="#FFFFFF" >

    <ScrollView
        android:layout_marginTop="6dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Fill the form to update detils"
                android:id="@+id/textView11" />

            <View
                android:layout_marginTop="8dp"
                android:background="#D3D3D3"
                android:layout_width = "match_parent"
                android:layout_height="1dp"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:src="@drawable/splash"
                android:id="@+id/ivProfile"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="150dp" />

            <LinearLayout
                android:layout_marginTop="15dp"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:spinnerMode="dialog"
                    android:layout_marginRight="4dp"
                    android:layout_weight="20"
                    android:background="@drawable/btn_back"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spSalutation" />
                <EditText
                    android:layout_marginRight="4dp"
                    android:layout_weight="40"
                    android:padding="10dp"
                    android:background="@drawable/btn_back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="First Name"
                    android:ems="10"
                    android:id="@+id/etFName" />
                <EditText
                    android:layout_weight="40"
                    android:padding="10dp"
                    android:background="@drawable/btn_back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Last Name"
                    android:ems="10"
                    android:id="@+id/etLName" />
            </LinearLayout>

            <EditText
                android:padding="10dp"
                android:background="@drawable/btn_back"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Designation"
                android:ems="10"
                android:id="@+id/etDesignation" />

            <Spinner
                android:id="@+id/spDept"
                android:spinnerMode="dialog"
                android:background="@drawable/btn_back"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Spinner
                android:spinnerMode="dialog"
                android:background="@drawable/btn_back"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spCompanies" />

            <EditText
                android:padding="10dp"
                android:background="@drawable/btn_back"
                android:layout_marginTop="10dp"
                android:hint="Phone Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/etPhone" />

            <EditText
                android:padding="10dp"
                android:background="@drawable/btn_back"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Address Line 1"
                android:ems="10"
                android:id="@+id/etAddrLine1" />

            <EditText
                android:padding="10dp"
                android:background="@drawable/btn_back"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Address Line 2"
                android:ems="10"
                android:id="@+id/etAddrLine2" />

            <EditText
                android:padding="10dp"
                android:background="@drawable/btn_back"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Address Line 3"
                android:ems="10"
                android:id="@+id/etAddrLine3" />

            <LinearLayout
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:spinnerMode="dialog"
                    android:layout_marginRight="4dp"
                    android:layout_weight="50"
                    android:background="@drawable/btn_back"
                    android:layout_marginTop="15dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Country Name"
                    android:ems="10"
                    android:id="@+id/etCountry" />
                <Spinner
                    android:spinnerMode="dialog"
                    android:layout_marginRight="4dp"
                    android:layout_weight="50"
                    android:background="@drawable/btn_back"
                    android:layout_marginTop="15dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="State Name"
                    android:ems="10"
                    android:id="@+id/etState" />

            </LinearLayout>

            <LinearLayout
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_marginRight="4dp"
                    android:layout_weight="50"
                    android:padding="10dp"
                    android:background="@drawable/btn_back"
                    android:layout_marginTop="15dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="City Name"
                    android:ems="10"
                    android:id="@+id/etCity" />
                <EditText
                    android:layout_weight="50"
                    android:padding="10dp"
                    android:background="@drawable/btn_back"
                    android:layout_marginTop="15dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:hint="Pincode"
                    android:ems="10"
                    android:id="@+id/etPincode" />
            </LinearLayout>

            <Button
                android:id="@+id/btnUpdate"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_back_theme"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:text="UPDATE"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

