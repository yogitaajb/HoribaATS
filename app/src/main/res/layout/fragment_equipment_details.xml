<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivImage"
            android:src="@color/colorPrimary"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/tvProductName"
            android:padding="10dp"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Product Name"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="50"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="Warranty\nFrom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:textColor="@color/textColor"
                            android:id="@+id/tvWarrantyFrom"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <View
                        android:layout_marginTop="8dp"
                        android:background="@color/colorPrimary"
                        android:layout_width = "1dp"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="50"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center"
                            android:text="Warranty\nTill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:textColor="@color/textColor"
                            android:id="@+id/tvWarrantyTill"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:text="Details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="8dp"
            android:background="#D3D3D3"
            android:layout_width = "match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:textColor="@color/textColor"
            android:id="@+id/tvDetails"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:padding="5dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:weightSum="2"
            android:layout_height="45dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <Button
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="normal"
                    android:textSize="14dp"
                    android:background="@drawable/btn_back_theme"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="right"
                    android:textAllCaps="false"
                    android:id="@+id/btn_service_call"
                    android:text="Service Call"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="start"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_back_theme"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:id="@+id/btn_view_existing_complaint"
                    android:text="View Existing Complaints"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>