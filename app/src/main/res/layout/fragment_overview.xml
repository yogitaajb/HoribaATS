<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginRight="5dp"
    android:background="@android:color/transparent"
    tools:context=".customer.MyEquipmentsFragment">
    <LinearLayout
        android:id="@+id/Ll1"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ivImage"
            android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:layout_width="30dp"
            android:tint="@color/lightGray"
            android:layout_height="30dp" />
        <TextView
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textStyle="normal"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:id="@+id/tvBuildingName"
            android:text="Overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:weightSum="4"
        android:layout_height="25dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="25dp">
            <TextView
                android:gravity="start"
                android:textColor="@color/textColor"
                android:textStyle="normal"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="Ticket No."
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>
        <TextView
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textStyle="normal"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:id="@+id/tv_ticketno"
            android:background="@drawable/rounded_edittext"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:weightSum="4"
        android:layout_height="25dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="25dp">
            <TextView
                android:gravity="start"
                android:textColor="@color/textColor"
                android:textStyle="normal"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="Customer name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>
        <TextView
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textStyle="normal"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:id="@+id/tv_custNAME"
            android:background="@drawable/rounded_edittext"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="4"
        android:layout_marginTop="5dp"
        android:layout_height="25dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="start"
                android:text="Reported By"
                android:textColor="@color/textColor"
                android:textSize="14dp"
                android:textStyle="normal" />
            <TextView
                android:gravity="start"
                android:textColor="@color/horiba_red"
                android:textStyle="normal"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:text="*"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textStyle="normal"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:id="@+id/tv_reported_by"
            android:background="@drawable/rounded_edittext"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:weightSum="4"
        android:layout_height="25dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="25dp">
            <TextView
                android:gravity="start"
                android:textColor="@color/textColor"
                android:textStyle="normal"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="Building no."
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>
        <TextView
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textStyle="normal"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:id="@+id/tv_building_no"
            android:background="@drawable/rounded_edittext"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="4"
        android:layout_marginTop="5dp"
        android:layout_height="25dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="25dp">
            <TextView
                android:gravity="start"
                android:textColor="@color/textColor"
                android:textStyle="normal"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="Lab no."
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textStyle="normal"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:id="@+id/tv_lab_no"
            android:background="@drawable/rounded_edittext"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:weightSum="4"
        android:layout_height="25dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="25dp">
            <TextView
                android:gravity="start"
                android:textColor="@color/textColor"
                android:textStyle="normal"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="Equipment name "
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>
        <TextView
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textStyle="normal"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:id="@+id/tv_equipname"
            android:background="@drawable/rounded_edittext"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:weightSum="4"
        android:layout_height="25dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="25dp">
            <TextView
                android:gravity="start"
                android:textColor="@color/textColor"
                android:textStyle="normal"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="Equipment serial no."
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>
        <TextView
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textStyle="normal"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:id="@+id/tv_equip_serialno"
            android:background="@drawable/rounded_edittext"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:weightSum="4"
        android:layout_height="25dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="25dp">
            <TextView
                android:gravity="start"
                android:textColor="@color/textColor"
                android:textStyle="normal"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="Warranty Start date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>
        <TextView
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textStyle="normal"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:id="@+id/tv_warranty_startdate"
            android:background="@drawable/rounded_edittext"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:weightSum="4"
        android:layout_height="25dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="25dp">
            <TextView
                android:gravity="start"
                android:textColor="@color/textColor"
                android:textStyle="normal"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="Warranty End date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>
        <TextView
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textStyle="normal"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:id="@+id/tv_warranty_enddate"
            android:background="@drawable/rounded_edittext"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="4"
        android:layout_marginTop="5dp"
        android:layout_height="55dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="25dp">
            <TextView
                android:gravity="start"
                android:textColor="@color/textColor"
                android:textStyle="normal"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="Description"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:background="@drawable/rounded_edittext"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textSize="12dp"
            android:textStyle="normal" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:weightSum="4"
        android:layout_height="25dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="25dp">
            <TextView
                android:gravity="start"
                android:textColor="@color/textColor"
                android:textStyle="normal"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="Call arttended on"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>
        <TextView
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textStyle="normal"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:id="@+id/tv_call_attended_on"
            android:background="@drawable/rounded_edittext"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:weightSum="4"
        android:layout_height="25dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="25dp">
            <TextView
                android:gravity="start"
                android:textColor="@color/textColor"
                android:textStyle="normal"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="Assigned Engineer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>
        <TextView
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textStyle="normal"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:id="@+id/tv_assigned_engineer"
            android:background="@drawable/rounded_edittext"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:gravity="right|end"
        android:layout_marginRight="15dp"
        android:layout_gravity="right"
        android:layout_height="35dp">


        <TextView
            android:gravity="start"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:id="@+id/txt_details"
            android:text="Details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/attachment_imge"
            android:background="@drawable/ic_navigation_black_24dp"
            android:layout_width="20dp"
            android:rotation="180"
            android:backgroundTint="@color/colorPrimary"
            android:layout_height="15dp" />


    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:weightSum="2"
        android:layout_height="45dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="45dp">
            <Button
                android:id="@+id/btn_back"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:textSize="14dp"
                android:background="@drawable/btn_back_theme"
                android:layout_marginLeft="10dp"
                android:layout_gravity="right"
                android:text="Back"
                android:layout_width="100dp"
                android:layout_height="45dp" />
        </LinearLayout>
       <!-- <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="start"
            android:layout_height="45dp">
            <Button
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:textSize="14dp"
                android:background="@drawable/btn_back_theme"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="Submit"
                android:layout_width="100dp"
                android:layout_height="45dp" />
        </LinearLayout>-->
    </LinearLayout>


</LinearLayout>