<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardElevation="4dp"
    android:layout_marginTop="10dp"
    card_view:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="8dp"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:weightSum="100"
            android:layout_weight="70"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="This is nes title. In short news will go hear. After reading title user will decide either to read full news or leave it. It will depends on his or her interest about the domain aread of news."
                android:id="@+id/tvTitle"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="right"
                android:text="14-06-2019 "
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@color/colorPrimary"
            android:id="@+id/ivImage"
            android:layout_marginLeft="5dp"
            android:layout_weight="30"
            android:maxHeight="120dp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>

</androidx.cardview.widget.CardView>